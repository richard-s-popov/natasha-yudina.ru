<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    
    <script type="text/javascript" src="@Url.Content("~/Content/lightbox2.6/lightbox/js/lightbox-2.6.min.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/lightbox2.6/lightbox/css/lightbox.css")"/>
</head>
    <body>
        <div class="main">
            <div class="header-content">
                <div class="logo"></div>
                <div class="fb_logo">
                    <a href="https://www.facebook.com/natasha.yudina.75" target="_blank"></a>
                </div>
                <div class="main-menu">
                    <span><a href="@Url.Action("Index", "Home")">@Resources.Resources.Home</a></span>
                    <span><a href="@Url.Action("Gallery", "Home")">@Resources.Resources.Gallery</a></span>
                    <span><a href="#">@Resources.Resources.Biography</a></span>
                    <span><a href="@Url.Action("Events", "Home")">@Resources.Resources.Events</a></span>
                    <span><a href="@Url.Action("Contacts", "Home")">@Resources.Resources.Contacts</a></span>
                    <span><a href="@Url.Action("ChangeCulture", "Home", new { lang = "ru", returnUrl = this.Request.RawUrl })">ru</a>&nbsp;/&nbsp;<a href="@Url.Action("ChangeCulture", "Home", new { lang = "en", returnUrl = this.Request.RawUrl })">en</a></span>
                </div>
            </div>
            <div class="center-content">
                @RenderBody()
            </div>
        </div>

        @RenderSection("scripts", required: false)
    </body>
</html>
